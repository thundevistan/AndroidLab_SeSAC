<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="4"
    android:orientation="horizontal"
    android:padding="16dp"
    tools:context=".MainActivity">

    <Button
        android:layout_width="0dp"
        android:layout_columnWeight="1"
        android:layout_margin="8dp"
        android:text="C" />

    <Button
        android:layout_width="0dp"
        android:layout_columnWeight="1"
        android:layout_margin="8dp"
        android:text="( )" />

    <Button
        android:layout_width="0dp"
        android:layout_columnWeight="1"
        android:layout_margin="8dp"
        android:text="%" />


    <Button
        android:layout_width="0dp"
        android:layout_columnWeight="1"
        android:layout_margin="8dp"
        android:text="/" />

    <Button
        android:layout_width="0dp"
        android:layout_columnWeight="1"
        android:layout_margin="8dp"
        android:text="7" />

    <Button
        android:layout_width="0dp"
        android:layout_columnWeight="1"
        android:layout_margin="8dp"
        android:text="8" />

    <Button
        android:layout_width="0dp"
        android:layout_columnWeight="1"
        android:layout_margin="8dp"
        android:text="9" />


    <Button
        android:layout_width="0dp"
        android:layout_columnWeight="1"
        android:layout_margin="8dp"
        android:text="X" />

    <Button
        android:layout_width="0dp"
        android:layout_columnWeight="1"
        android:layout_margin="8dp"
        android:text="4" />

    <Button
        android:layout_width="0dp"
        android:layout_columnWeight="1"
        android:layout_margin="8dp"
        android:text="5" />

    <Button
        android:layout_width="0dp"
        android:layout_columnWeight="1"
        android:layout_margin="8dp"
        android:text="6" />


    <Button
        android:layout_width="0dp"
        android:layout_columnWeight="1"
        android:layout_margin="8dp"
        android:text="-" />

    <Button
        android:layout_width="0dp"
        android:layout_columnWeight="1"
        android:layout_margin="8dp"
        android:text="1" />

    <Button
        android:layout_width="0dp"
        android:layout_columnWeight="1"
        android:layout_margin="8dp"
        android:text="2" />

    <Button
        android:layout_width="0dp"
        android:layout_columnWeight="1"
        android:layout_margin="8dp"
        android:text="3" />

    <Button
        android:layout_width="0dp"
        android:layout_columnWeight="1"
        android:layout_margin="8dp"
        android:text="+" />

    <Button
        android:layout_width="0dp"
        android:layout_columnWeight="1"
        android:layout_margin="8dp"
        android:text="+/-" />

    <Button
        android:layout_width="0dp"
        android:layout_columnWeight="1"
        android:layout_margin="8dp"
        android:text="0" />

    <Button
        android:layout_width="0dp"
        android:layout_columnWeight="1"
        android:layout_margin="8dp"
        android:text="." />

    <Button
        android:layout_width="0dp"
        android:layout_columnWeight="1"
        android:layout_margin="8dp"
        android:text="=" />

</GridLayout>